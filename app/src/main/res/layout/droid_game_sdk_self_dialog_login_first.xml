<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">


        <ImageView android:layout_width="match_parent"
              android:src="@mipmap/droid_game_sdk_self_ic_background"
                   android:scaleType="centerCrop"
              android:layout_height="140dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="right"
                  android:layout_height="40dp">

        <droid.game.plugin.sdk.delegate.widget.CloseView android:layout_width="40dp"
                                                         android:layout_marginRight="8dp"
                                                         android:background="@drawable/droid_game_sdk_self_shape_close_button_background"
                                                         android:layout_height="40dp"/>
    </LinearLayout>

    <ImageView android:layout_width="48dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="24dp"
               android:background="@drawable/droid_game_sdk_self_logo_background"
               android:layout_height="48dp"/>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginTop="76dp"
                  android:layout_height="wrap_content">

        <droid.game.plugin.sdk.delegate.widget.MarkView
                android:layout_width="match_parent"
                android:layout_height="48dp"/>


        <LinearLayout android:layout_width="match_parent"
                      android:background="@drawable/background_test"
                      android:orientation="vertical"
                      android:paddingLeft="16dp"
                      android:paddingRight="16dp"
                      android:paddingBottom="16dp"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                      android:layout_marginTop="14dp"
                      android:text="指游账号:185****6949"
                      android:gravity="center"
                      android:singleLine="true"
                      android:textSize="15sp"
                      android:layout_marginBottom="18dp"
                      android:textColor="#333333"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                    android:background="@drawable/btn_background"
                      android:gravity="center"
                      android:textColor="#fff"
                      android:textSize="17sp"
                      android:textStyle="bold"
                      android:text="进入游戏"
                    android:layout_height="48dp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="16dp"
                          android:gravity="center_vertical"
                          android:layout_height="40dp">

                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          android:text="切换账号"
                          android:textSize="17sp"
                          android:gravity="center"
                          android:layout_height="match_parent"/>

                <View android:layout_width="1dp"
                      android:layout_height="14dp"
                      android:background="#999999"/>

                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          android:text="忘记密码"
                          android:textSize="17sp"
                          android:gravity="center"
                          android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_marginTop="76dp"
              android:textColor="#ffffff"
              android:gravity="center"
              android:textSize="20sp"
              android:text="指游通行证"
              android:textStyle="bold"
              android:layout_height="wrap_content"/>

    </RelativeLayout>
</LinearLayout>
