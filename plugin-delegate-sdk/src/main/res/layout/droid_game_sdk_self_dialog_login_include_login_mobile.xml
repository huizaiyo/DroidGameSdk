<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="250dp">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="48dp">

        <ImageView android:layout_width="48dp"
                   android:src="@mipmap/droid_game_sdk_self_ic_back"
                   android:paddingTop="14dp"
                   android:paddingBottom="14dp"
                   android:visibility="invisible"
                   android:paddingRight="28dp"
                   android:layout_height="48dp"/>

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:gravity="center"
                  android:text="手机登录"
                  android:textColor="#ffffff"
                  android:layout_height="match_parent"/>

        <ImageView android:layout_width="48dp"
                   android:src="@mipmap/droid_game_sdk_self_ic_question"
                   android:paddingTop="13dp"
                   android:visibility="invisible"
                   android:paddingBottom="13dp"
                   android:paddingLeft="26dp"
                   android:layout_height="48dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="4dp"
                  android:background="@drawable/droid_game_sdk_self_shape_input_top"
                  android:layout_height="36dp">

        <ImageView android:layout_width="36dp"
                   android:src="@mipmap/droid_game_sdk_self_ic_edit_account"
                   android:padding="10dp"
                   android:layout_height="36dp"/>

        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:background="#00000000"
                  android:paddingRight="10dp"
                  android:textColorHint="#afafaf"
                  android:hint="手机号"
                  android:id="@+id/droid_game_sdk_self_edit_mobile_login_phone_number"
                  android:textSize="13sp"
                  android:maxLines="1"
                  android:gravity="center_vertical"
                  android:layout_height="match_parent"/>

        <ImageView android:layout_width="36dp"
                   android:src="@mipmap/droid_game_sdk_self_ic_edit_down"
                   android:padding="10dp"
                   android:visibility="gone"
                   android:layout_height="36dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="1dp"
                  android:background="@drawable/droid_game_sdk_self_shape_input_bottomn"
                  android:layout_height="36dp">

        <ImageView android:layout_width="36dp"
                   android:src="@mipmap/droid_game_sdk_self_ic_code"
                   android:padding="10dp"
                   android:layout_height="36dp"/>

        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/droid_game_sdk_self_edit_mobile_login_phone_code"
                  android:background="#00000000"
                  android:paddingRight="10dp"
                  android:textColorHint="#afafaf"
                  android:hint="验证码"
                  android:textSize="13sp"
                  android:maxLines="1"
                  android:gravity="center_vertical"
                  android:layout_height="match_parent"/>

        <ImageView android:layout_width="36dp"
                   android:src="@mipmap/droid_game_sdk_self_ic_edit_down"
                   android:padding="10dp"
                   android:visibility="gone"
                   android:layout_height="36dp"/>

        <TextView android:layout_width="90dp"
                  android:text="获取验证码"
                  android:gravity="center"
                  android:background="@drawable/droid_game_sdk_self_selector_get_code_button"
                  android:textColor="#ff8200"
                  android:textSize="12sp"
                  android:layout_marginRight="4dp"
                  android:layout_height="28dp"/>
    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_marginTop="16dp"
              android:textColor="#ffffff"
              android:gravity="center"
              android:textSize="13sp"
              android:background="@drawable/droid_game_sdk_self_selector_major_button_background"
              android:text="进入游戏"
              android:layout_height="36dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_marginTop="16dp"
              android:textColor="#ffffff"
              android:gravity="center"
              android:id="@id/droid_game_sdk_self_open_name_login_from_mobile_login"
              android:textSize="13sp"
              android:background="@drawable/droid_game_sdk_self_selector_helper_button_background"
              android:text="账号登录"
              android:layout_height="36dp"/>

</LinearLayout>